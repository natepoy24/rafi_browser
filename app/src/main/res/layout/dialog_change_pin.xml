<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#2C2C2C">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ubah PIN Aplikasi"
        android:textColor="#BB86FC"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/etOldPin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#F8F8F8"
        android:hint="PIN Lama"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:textColor="#444" />

    <EditText
        android:id="@+id/etNewPin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="PIN Baru (4 Digit)"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:textColor="#F44336"
        android:backgroundTint="#444"/>

    <EditText
        android:id="@+id/etConfirmPin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Konfirmasi PIN Baru"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:textColor="#F44336"
        android:backgroundTint="#444"/>
</LinearLayout>
